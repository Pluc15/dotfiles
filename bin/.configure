#!/bin/sh

echo '#!/bin/sh'                                                                           > "$HOME/.config/profile.d/00-dotfiles-generated.sh"
echo "## Everything in this file will be erased next time you run the dotfiles installer"  >> "$HOME/.config/profile.d/00-dotfiles-generated.sh"
echo "export DOTFILES=$DOTFILES"                                                           >> "$HOME/.config/profile.d/00-dotfiles-generated.sh"
echo "PATH=\$PATH:$DOTFILES/bin"                                                           >> "$HOME/.config/profile.d/00-dotfiles-generated.sh"

echo "## Everything in this file will be erased next time you run the dotfiles installer" > "$HOME/.config/Xresources.d/01-monitors-generated"
echo "*.monitor1: $($DOTFILES/bin/.get-monitor 0)"                                        >> "$HOME/.config/Xresources.d/01-monitors-generated"
echo "*.monitor2: $($DOTFILES/bin/.get-monitor 1)"                                        >> "$HOME/.config/Xresources.d/01-monitors-generated"
echo "*.monitor3: $($DOTFILES/bin/.get-monitor 2)"                                        >> "$HOME/.config/Xresources.d/01-monitors-generated"
echo "*.monitor4: $($DOTFILES/bin/.get-monitor 3)"                                        >> "$HOME/.config/Xresources.d/01-monitors-generated"
