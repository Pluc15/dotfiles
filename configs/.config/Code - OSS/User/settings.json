{
  // Editor behavior
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "editor.suggestSelection": "first",

  // Workbench behavior
  "workbench.startupEditor": "none",

  // File explorer
  "explorer.confirmDelete": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true
  },

  // Formating and linting
  "editor.formatOnSave": true,
  "eslint.autoFixOnSave": true,
  "sort-imports.on-save": true,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.trimAutoWhitespace": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": null
  },

  // Look & feel
  "window.zoomLevel": 0,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "workbench.colorTheme": "Monokai",
  "editor.fontFamily": "Fira Code, monospace, Font Awesome",
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.tabSize": 2,
  "workbench.colorCustomizations": {
    "focusBorder": "#c57e77",
    "foreground": "#f0e1df",
    "widget.shadow": "#a89d9c",
    "selection.background": "#873f39",
    "descriptionForeground": "#c57e77",
    "errorForeground": "#873f39",
    "input.background": "#0d0d0d",
    "input.foreground": "#f0e1df",
    "input.placeholderForeground": "#a89d9c",
    "inputOption.activeBorder": "#c57e77",
    "inputValidation.errorBackground": "#873f39",
    "inputValidation.errorBorder": "#873f39",
    "inputValidation.infoBackground": "#c57e77",
    "inputValidation.infoBorder": "#c57e77",
    "inputValidation.warningBackground": "#b65458",
    "inputValidation.warningBorder": "#b65458",
    "list.invalidItemForeground": "#873f39",
    "list.errorForeground": "#873f39",
    "list.warningForeground": "#b65458",
    "terminal.background": "#0d0d0d",
    "terminal.foreground": "#f0e1df",
    "terminalCursor.background": "#0d0d0d",
    "terminalCursor.foreground": "#f0e1df",
    "terminal.ansiBlack": "#0d0d0d",
    "terminal.ansiRed": "#873f39",
    "terminal.ansiGreen": "#8e3d7a",
    "terminal.ansiYellow": "#b65458",
    "terminal.ansiBlue": "#c57e77",
    "terminal.ansiMagenta": "#d1ab93",
    "terminal.ansiCyan": "#dbadad",
    "terminal.ansiWhite": "#f0e1df",
    "terminal.ansiBrightBlack": "#a89d9c",
    "terminal.ansiBrightRed": "#873f39",
    "terminal.ansiBrightGreen": "#8e3d7a",
    "terminal.ansiBrightYellow": "#b65458",
    "terminal.ansiBrightBlue": "#c57e77",
    "terminal.ansiBrightMagenta": "#d1ab93",
    "terminal.ansiBrightCyan": "#dbadad",
    "terminal.ansiBrightWhite": "#f0e1df",
    "activityBar.background": "#0d0d0d",
    "activityBar.foreground": "#f0e1df",
    "sideBarSectionHeader.background": "#0d0d0d",
    "sideBar.background": "#0d0d0d",
    "sideBar.foreground": "#f0e1df",
    "statusBar.background": "#d1ab93",
    "statusBar.foreground": "#f0e1df",
    "statusBar.debuggingBackground": "#8e3d7a",
    "statusBar.noFolderBackground": "#8e3d7a",
    "tab.activeBackground": "#0d0d0d",
    "tab.activeForeground": "#f0e1df",
    "editor.background": "#0d0d0d",
    "editorOverviewRuler.modifiedForeground": "#b65458",
    "editorOverviewRuler.addedForeground": "#8e3d7a",
    "editorOverviewRuler.deletedForeground": "#873f39",
    "editorOverviewRuler.warningForeground": "#b65458",
    "editorOverviewRuler.infoForeground": "#c57e77",
    "editorOverviewRuler.errorForeground": "#873f39",
    "editorGutter.background": "#0d0d0d",
    "editorGutter.modifiedBackground": "#b65458",
    "editorGutter.addedBackground": "#8e3d7a",
    "editorGutter.deletedBackground": "#873f39",
    "editorError.foreground": "#873f39",
    "editorWarning.foreground": "#b65458",
    "editorInfo.foreground": "#c57e77",
    "editorHint.foreground": "#8e3d7a",
    "gitDecoration.modifiedResourceForeground": "#b65458",
    "gitDecoration.deletedResourceForeground": "#873f39",
    "gitDecoration.untrackedResourceForeground": "#8e3d7a"
  },

  // Extensions
  "liveshare.featureSet": "insiders",
  "docker.containers.label": "ContainerName"
}
